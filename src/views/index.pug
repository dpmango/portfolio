        // Calculator
        .calculator#sectionCalculator
          .heading.heading--calculator
            .heading__back Estimate project
            .heading__front Online cost estimatior
          //.calculator__short If you have an intersting project, you can estimate the costs

          form.calculator__form
            .calculator__form__group.calculator__form__group--forStep1.is-active
              .calculator__form__heading
                .calculator__form__heading__num 1
                span What services do you need ?
              .ac-custom.ac-checkbox.ac-checkmark.ac--four-items(autocomplete="off")
                ul
                  li
                    input#stage1(name="stage" type="checkbox")
                    label(for="stage1") Ideas / Prototyping
                  li
                    input#stage2(name="stage" type="checkbox")
                    label(for="stage2") UI Design
                  li
                    input#stage3(name="stage" type="checkbox")
                    label(for="stage3") Front-end development

            .calculator__form__group.calculator__form__group--forStep2
              .calculator__form__heading
                .calculator__form__heading__num 2
                span What kind of project do you have ?
              .ac-custom.ac-radio.ac-fill.ac--four-items(autocomplete="off")
                ul
                  li
                    input#projectType1(name="projectType" type="radio")
                    label(for="projectType1") Corporate
                  li
                    input#projectType2(name="projectType" type="radio")
                    label(for="projectType2") Landing
                  li
                    input#projectType3(name="projectType" type="radio")
                    label(for="projectType3") E-commerce
                  li
                    input#projectType4(name="projectType" type="radio")
                    label(for="projectType4") Web-app

            .calculator__form__group.calculator__form__group--forStep3
              .calculator__form__heading
                .calculator__form__heading__num 3
                span How many pages have to be made ?
              .calculator__form__range
                input(type="range" id="calcPages" min="1" max="21" value="5")
                span.rangeslider__tooltip#range-tooltip

            .calculator__form__group.calculator__form__group--forStep4
              .calculator__form__heading
                .calculator__form__heading__num 4
                span What kind of features you would like to have ?
              .ac-custom.ac-checkbox.ac-checkmark.ac--four-items(autocomplete="off")
                ul
                  li.featureFirst
                    input#features1(name="features" type="checkbox")
                    label(for="features1") Responsive
                  li.featureSecond
                    input#features2(name="features" type="checkbox")
                    label(for="features2") React.js based
                  li.featureThird
                    input#features3(name="features" type="checkbox")
                    label(for="features3") ModX admin
                  li.featureForth
                    input#features4(name="features" type="checkbox")
                    label(for="features4") Complex javascript UI
                  li.featureFifth
                    input#features5(name="features" type="checkbox")
                    label(for="features5") Mobile first design

            .calculator__form__price
              hr
              .calculator__form__price__heading This project is about
              .calculator__form__price__result <span>0</span> h
              .calculator__form__price__base (20$/h)

